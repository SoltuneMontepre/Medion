{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Yarp": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/gateway-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithExceptionDetails"
    ]
  },
  "ReverseProxy": {
    "Routes": {
      "sale": {
        "ClusterId": "sale",
        "Match": {
          "Path": "/api/sale/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/{**catch-all}"
          }
        ]
      },
      "sale-swagger": {
        "ClusterId": "sale",
        "Match": {
          "Path": "/swagger-docs/sale/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/swagger/{**catch-all}"
          }
        ]
      },
      "approval": {
        "ClusterId": "approval",
        "Match": {
          "Path": "/api/approval/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/{**catch-all}"
          }
        ]
      },
      "approval-swagger": {
        "ClusterId": "approval",
        "Match": {
          "Path": "/swagger-docs/approval/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/swagger/{**catch-all}"
          }
        ]
      },
      "payroll": {
        "ClusterId": "payroll",
        "Match": {
          "Path": "/api/payroll/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/{**catch-all}"
          }
        ]
      },
      "payroll-swagger": {
        "ClusterId": "payroll",
        "Match": {
          "Path": "/swagger-docs/payroll/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/swagger/{**catch-all}"
          }
        ]
      },
      "inventory": {
        "ClusterId": "inventory",
        "Match": {
          "Path": "/api/inventory/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/{**catch-all}"
          }
        ]
      },
      "inventory-swagger": {
        "ClusterId": "inventory",
        "Match": {
          "Path": "/swagger-docs/inventory/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/swagger/{**catch-all}"
          }
        ]
      },
      "manufacture": {
        "ClusterId": "manufacture",
        "Match": {
          "Path": "/api/manufacture/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/{**catch-all}"
          }
        ]
      },
      "manufacture-swagger": {
        "ClusterId": "manufacture",
        "Match": {
          "Path": "/swagger-docs/manufacture/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/swagger/{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "sale": {
        "Destinations": {
          "d1": {
            "Address": "http://sale-api"
          }
        }
      },
      "approval": {
        "Destinations": {
          "d1": {
            "Address": "http://approval-api"
          }
        }
      },
      "payroll": {
        "Destinations": {
          "d1": {
            "Address": "http://payroll-api"
          }
        }
      },
      "inventory": {
        "Destinations": {
          "d1": {
            "Address": "http://inventory-api"
          }
        }
      },
      "manufacture": {
        "Destinations": {
          "d1": {
            "Address": "http://manufacture-api"
          }
        }
      }
    }
  },
  "Auth": {
    "Authority": "http://localhost:8080/realms/medion"
  },
  "Swagger": {
    "OAuthClientId": "medion-swagger"
  }
}
