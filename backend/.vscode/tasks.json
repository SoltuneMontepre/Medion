{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "run-mise-dev",
      "type": "shell",
      "command": "mise dev",
      "isBackground": true, // <--- ĐÂY LÀ DÒNG QUAN TRỌNG NHẤT
      "problemMatcher": {
        "pattern": {
          "regexp": ".*"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": ".*"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    }
  ]
}
